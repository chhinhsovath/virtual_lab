# Database Configuration
DATABASE_URL=postgresql://postgres:12345@localhost:5432/virtual_lab

# Production Database (DigitalOcean)
# DATABASE_URL=postgresql://postgres:P@ssw0rd@137.184.109.21:5432/virtual_lab

# Application Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development

# Session Configuration
SESSION_SECRET=your-session-secret-here-change-in-production
SESSION_COOKIE_NAME=virtual_lab_session
SESSION_MAX_AGE=86400 # 24 hours in seconds

# File Storage Configuration (S3-compatible)
STORAGE_ENDPOINT=your-s3-endpoint
STORAGE_ACCESS_KEY=your-access-key
STORAGE_SECRET_KEY=your-secret-key
STORAGE_BUCKET=virtual-lab-files
STORAGE_REGION=us-east-1

# Email Configuration (Optional)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password
SMTP_FROM=VirtualLab LMS <noreply@virtuallab.edu>

# Language Configuration
DEFAULT_LANGUAGE=en
SUPPORTED_LANGUAGES=en,km

# Feature Flags
ENABLE_MESSAGING=true
ENABLE_ANNOUNCEMENTS=true
ENABLE_FILE_UPLOAD=true
ENABLE_SIMULATION=true
ENABLE_ANALYTICS=true

# External Integrations
TARL_API_URL=https://tarl-api.example.com
TARL_API_KEY=your-tarl-api-key

# Security
CORS_ORIGIN=http://localhost:3000
RATE_LIMIT_WINDOW=15 # minutes
RATE_LIMIT_MAX=100 # requests per window

# Logging
LOG_LEVEL=info
LOG_FILE=./logs/app.log

# Upstash Vector Database (for Context7)
UPSTASH_VECTOR_REST_URL=https://your-vector-url.upstash.io
UPSTASH_VECTOR_REST_TOKEN=your-upstash-vector-token

# OpenAI (for embeddings)
OPENAI_API_KEY=sk-your-openai-api-key